<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rebook"
        tools:targetApi="31">
        <activity
            android:name=".my_account"
            android:exported="true"
            android:label="My account"
            android:parentActivityName=".homescreen">


        </activity>
        <activity
            android:name=".add_book"
            android:exported="true"
            android:label="add book"
            android:parentActivityName=".Book_list">

        </activity>
        <activity
            android:name=".Book_list"
            android:exported="true"
            android:label="BookList"
            android:parentActivityName=".homescreen">

        </activity>
        <activity
            android:name=".homescreen"
            android:exported="true"
            android:label="Home"
            android:theme="@style/Theme.Rebook" />
        <activity
            android:name=".first_screen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".signupscreen"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">

        </activity>
        <activity
            android:name=".loginscreen"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
    </application>

</manifest>